<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:background="@drawable/very_hot"
    android:paddingLeft="60dp"
    android:paddingRight="32dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circleIV"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/bg_temperature"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconIV"
        android:src="@drawable/sunny"
        android:paddingLeft="10dp"
        android:layout_alignBottom="@+id/circleIV"
        android:layout_toRightOf="@+id/circleIV"
        android:layout_toEndOf="@+id/circleIV"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/dayNameLabel"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        tools:text="Wednesday"
        android:paddingLeft="10dp"
        android:layout_alignBottom="@+id/iconIV"
        android:layout_toRightOf="@+id/iconIV"
        android:layout_toEndOf="@+id/iconIV"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/temperatureLabel"
        android:layout_alignTop="@+id/circleIV"
        android:layout_alignBottom="@+id/circleIV"
        android:layout_alignLeft="@+id/circleIV"
        android:layout_alignRight="@+id/circleIV"
        android:gravity="center"
        tools:text="100"
        android:textColor="#ff424242"/>
</RelativeLayout>